# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Configuration
# Get your API key from: https://ai.google.dev/gemini-api/docs/api-key
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Database Configuration
# Get your connection string from MongoDB Atlas
MONGODB_URI=your_mongodb_connection_string_here

# JWT Secret for Authentication
# Generate a secure random string (32+ characters recommended)
JWT_SECRET=your_secure_jwt_secret_here

# AI Orchestrator Configuration (Optional)
# Set to 'true' to enable intelligent model routing between GPT-5 and Gemini 2.5 Pro
# When enabled, the system will automatically choose the best model for each task
USE_AI_ORCHESTRATOR=true

# Application Configuration
NODE_ENV=development
