{
  "compilerOptions": {
    /* ===========================
       ‚öôÔ∏è Core Compilation Settings
       =========================== */
    "target": "ES2021",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "incremental": true,

    /* ===========================
       üß† Type Safety & Compatibility
       =========================== */
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,

    /* ===========================
       ü™Ñ JSX & Next.js Integration
       =========================== */
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* ===========================
       üìÅ Path Aliases
       =========================== */
    "paths": {
      "@/*": ["./*"]
    },

    /* ===========================
       üíª Node Support (for Archiver)
       =========================== */
    "types": ["node"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
